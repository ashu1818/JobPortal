                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label>Password</label>
                                    <input class="form-control" type="password" id="UserPassword" placeholder="Enter your password" value="" name="UserPassword" required="" >
                                </div>
                            </div>
                            <div class="form-group">
                                @*<div class="col-sm-12 confirmation">
