@model IEnumerable<JobPortal.Models.jobseek>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container-fluid py-4">
        <h2>Applied Job's By User</h2>

        <div id="Grid">
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.JobCreatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ManageJob.JobName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserMaster.UserName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobCreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManageJob.JobName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserMaster.UserName)
                        </td>
                        @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.JobseekId }) |
                            @Html.ActionLink("Details", "Details", new { id=item.JobseekId }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.JobseekId })
                        </td>*@
                    </tr>
                }

            </table>
        </div>

        @using (Html.BeginForm("Export", "jobseeks", FormMethod.Post))
        {
            <input type="hidden" name="GridHtml" />
            <input type="submit" id="btnSubmit" value="Export" />
        }
        @*<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>*@
        <script type="text/javascript">
            $(function () {
                $("#btnSubmit").click(function () {
                    $("input[name='GridHtml']").val($("#Grid").html());
                });
            });
        </script>
   </div>

